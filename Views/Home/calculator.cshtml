<html>
<head>
    <title>Tennis Tutoring Calculator</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="calculator.js"></script>
</head>
<body>
    <h1>Tennis Tutoring Calculator</h1>
    <label for="hours">Number of hours needed:</label>
    <input type="number" id="hours" min="0">
    <br>
    <label>My hourly rate:</label>
    <input type="text" id="hourlyRate" value="$50" readonly>
    <br>
    <button id="calculateButton">Calculate Total</button>
    <br>
    <label for="total">Total:</label>
    <input type="text" id="total" readonly>
    <br>
    <a href="/">Back to Home</a>
</body>
</html>
